<div class="cet-miab-game-board__puzzle">
    {{#each puzzleBoard as | puzzleBoardRow puzzleBoardRowIndex |}}
    <div class="cet-miab-game-board__puzzle-row cet-miab-game-board__puzzle-row-{{puzzleBoardRowIndex}}">
        {{#each puzzleBoardRow as | puzzlePiece puzzlePieceIndex |}}
        <div class="cet-miab-game-board__puzzle-item {{if puzzlePiece.focus 'focus'}}"
            {{action "onPuzzlePieceClick" puzzlePiece puzzleBoardRowIndex puzzlePieceIndex}}>
            <img src="{{puzzlePiece.url}}">
        </div>
        {{/each}}
    </div>
    {{/each}}
</div>

<div class="cet-miab-game-board__control">
